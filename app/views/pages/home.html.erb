<!-- app/views/home/index.html.erb -->
<section class="bg-light text-center py-5">
  <div class="container">
    <h1 class="display-4">Ласкаво просимо до нашого онлайн-магазину!</h1>
    <p class="lead">Знайдіть найкращі товари за неперевершеними цінами.</p>
    <%= link_to 'Почати покупки', products_path, class: 'btn btn-primary btn-lg' %>
  </div>
</section>

<section class="py-5">
  <div class="container">
    <h2 class="display-4 text-center mb-4">Рекомендувані товари</h2>
    <div class="row">
      <% @featured_products.each do |product| %>
        <div class="col-md-4">
          <div class="card">
            <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><%= product.description %></p>
              <p class="card-text"><strong>$<%= product.price %></strong></p>
              <%= link_to 'Детальніше', product_path(product), class: 'btn btn-outline-primary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

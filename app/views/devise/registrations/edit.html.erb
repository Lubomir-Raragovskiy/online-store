<h2>Редагувати <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "Електронна пошта" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Очікує підтвердження: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "Пароль" %> <i>(залиште порожнім, якщо не хочете змінювати)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>Мінімум <%= @minimum_password_length %> символів</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Підтвердження пароля" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Поточний пароль" %> <i>(нам потрібен ваш поточний пароль для підтвердження змін)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Оновити" %>
  </div>
<% end %>

<h3>Видалити акаунт</h3>

<div>Незадоволені? <%= button_to "Видалити акаунт", registration_path(resource_name), data: { confirm: "Ви впевнені?", turbo_confirm: "Ви впевнені?" }, method: :delete %></div>

<%= link_to "Назад", :back %>

<!DOCTYPE html>
<html>
  <head>
    <title>Online Store</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= javascript_pack_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>
  <body>
     <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-dark">
      <div class="container">
        <a class="navbar-brand" href="#">Online Store</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
  <ul class="navbar-nav ms-auto">
    <li class="nav-item">
      <%= link_to 'Home', root_path, class: 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to 'Products', products_path, class: 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to 'Cart', cart_path, class: 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to 'Contact', contact_path, class: 'nav-link' %>
    </li>
    <% if user_signed_in? %>
      <!-- Якщо користувач увійшов -->
      <li class="nav-item">
        <%= link_to 'Profile', edit_user_registration_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link' %>
      </li>
      <% if current_user.admin? %>
        <!-- Посилання для адміністратора -->
        <li class="nav-item">
          <%= link_to 'Admin Dashboard', admin_dashboard_index_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Manage Users', admin_users_path, class: 'nav-link' %>
        </li>
      <% end %>
    <% else %>
      <!-- Якщо користувач не увійшов -->
      <li class="nav-item">
        <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Login', new_user_session_path, class: 'nav-link' %>
      </li>
    <% end %>
  </ul>
</div>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Content -->
    <div class="container mt-4">
      <%= yield %>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3">
      <p class="mb-0">&copy; <%= Date.today.year %> Online Store. All rights reserved.</p>
    </footer>
  </body>
</html>

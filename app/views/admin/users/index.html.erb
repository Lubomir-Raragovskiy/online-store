<h1>Управління користувачами</h1>


<%= link_to 'Створити нового користувача', new_admin_user_path, class: 'btn btn-primary mb-3' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Електронна пошта</th>
      <th>Дії</th>
    </tr>
  </thead>
  <tbody>
  <% if @users.present? %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Переглянути', admin_user_path(user), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Редагувати', edit_admin_user_path(user), class: 'btn btn-warning btn-sm' %>
          <%= button_to 'Видалити', admin_user_path(user), method: :delete, data: { confirm: 'Ви впевнені?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="4" class="text-center">Користувачів не знайдено.</td>
    </tr>
  <% end %>
  </tbody>
</table>

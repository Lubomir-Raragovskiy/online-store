<h1>Роки моделі: <%= @model.name %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Рік</th>
      <th>Дії</th>
    </tr>
  </thead>
  <tbody>
    <% @model_years.each do |model_year| %>
      <tr>
        <td><%= model_year.year.year %></td>
        <td>
          <%= link_to "Редагувати", edit_admin_model_model_year_path(@model, model_year), class: "btn btn-primary"  %> |
          <%= button_to"Видалити", admin_model_model_year_path(@model, model_year), method: :delete, data: { confirm: "Ви впевнені?" }, class: "btn btn-primary"  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Додати новий рік", new_admin_model_model_year_path(@model), class: "btn btn-primary"  %>
<%= link_to "Назад до моделей", admin_models_path, class: "btn btn-primary"  %>

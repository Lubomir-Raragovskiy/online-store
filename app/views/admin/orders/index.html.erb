<h1>Список замовлень</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Користувач</th>
      <th>Сума</th>
      <th>Дата створення</th>
      <th>Дії</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.email if order.user %></td>
        <td><%= number_to_currency(order.total_price_cents) %></td>
        <td><%= l(order.created_at, format: :long) %></td>
        <td>
          <%= link_to 'Переглянути', order_path(order), class: 'btn' %>
          <%= button_to 'Видалити', admin_order_path(order), method: :delete, data: { confirm: 'Ви впевнені?' }, class: 'btn' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<h1>Список запитів зворотнього зв'язку</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Ім'я</th>
      <th>Email</th>
      <th>Повідомлення</th>
      <th>Дата</th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.message %></td>
        <td><%= contact.created_at.strftime('%d.%m.%Y %H:%M') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
